{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [],
  "awesomeTypescriptLoaderOptions": {
    "forceIsolatedModules": true,
    "useBabel": true,
    "babelCore": "@babel/core",
    "useCache": true,
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
